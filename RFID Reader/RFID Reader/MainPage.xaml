<Page
    x:Class="RFID_Reader.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RFID_Reader"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0,0,-326.375,0" Height="200" VerticalAlignment="Top">
        <Image x:Name="imgRFID" HorizontalAlignment="Left" Height="166" Margin="494,24,0,0" VerticalAlignment="Top" Width="178" NineGrid="0" Stretch="Fill" Source="istock_rfid_tag.jpg" RequestedTheme="Dark"/>

        <TextBox x:Name="txtUUID" HorizontalAlignment="Left" Margin="274,56,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="191" IsReadOnly="True"/>
        <TextBlock x:Name="tbUUID" HorizontalAlignment="Left" Margin="210,68,0,0" TextWrapping="Wrap" Text="UUID:" VerticalAlignment="Top"/>
        <Button x:Name="cmdStart" Content="Start RFID Check" HorizontalAlignment="Left" Margin="274,123,0,0" VerticalAlignment="Top" Width="172" Click="cmdStart_Click"/>


    </Grid>
</Page>
